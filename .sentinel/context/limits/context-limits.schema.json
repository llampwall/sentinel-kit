{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sentinel Context Limit Configuration",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "defaultMaxLines": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10000
    },
    "warningThreshold": {
      "type": "number",
      "minimum": 0.1,
      "maximum": 1
    },
    "forbiddenPaths": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "globs"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "globs": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          },
          "maxLines": { "type": "integer", "minimum": 1, "maximum": 10000 },
          "enforceAllowedContext": { "type": "boolean" }
        },
        "additionalProperties": false
      }
    },
    "overrides": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["pattern"],
        "properties": {
          "pattern": { "type": "string", "minLength": 1 },
          "maxLines": { "type": "integer", "minimum": 1, "maximum": 10000 },
          "reason": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["defaultMaxLines", "forbiddenPaths", "artifacts"],
  "additionalProperties": false
}
