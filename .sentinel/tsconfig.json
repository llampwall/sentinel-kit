{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "scripts/**/*.ts",
    "scripts/**/*.js",
    "scripts/**/*.mjs",
    "tests/**/*.ts",
    "tests/**/*.js",
    "vitest.config.ts",
    "vitest.config.sentinel.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
