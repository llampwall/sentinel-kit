{
  "name": "sentinel-kit-tools",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=20.17.0 <21"
  },
  "scripts": {
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:sentinels": "vitest run --config vitest.config.sentinel.ts",
    "test:sentinels:watch": "vitest watch --config vitest.config.sentinel.ts",
    "capsule:create": "tsx scripts/capsule-create.mjs",
    "context:lint": "tsx scripts/context/lint.mts",
    "context:lint:strict": "tsx scripts/context/lint.mts --strict",
    "validate:contracts": "node scripts/contract-validate.mjs",
    "mcp:contract-validate": "node scripts/mcp/contract-validate-server.mjs",
    "mcp:contract-validate:smoke": "node scripts/mcp/contract-validate-smoke.mjs",
    "test:watch": "vitest watch",
    "mcp:sentinel-run": "node scripts/mcp/sentinel-run.mjs",
    "mcp:sentinel-run:smoke": "node scripts/mcp/sentinel-run-smoke.mjs",
    "mcp:decision-log": "node scripts/mcp/decision-log.mjs",
    "mcp:decision-log:smoke": "node scripts/mcp/decision-log-smoke.mjs"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "eta": "^3.4.0",
    "node-watch": "^0.7.4",
    "picomatch": "^4.0.2",
    "vscode-jsonrpc": "8.1.0",
    "yaml": "^2.8.1",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/node": "^22.7.4",
    "@types/picomatch": "^2.3.3",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.39.1",
    "globals": "^15.9.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.0",
    "vitest": "^2.1.9"
  }
}
